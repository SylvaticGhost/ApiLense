{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-env --env-file=.env --allow-net --allow-ffi --allow-sys src/main.ts",
    "build": "deno compile --allow-read --allow-write --output my-cli src/main.ts",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno run -A npm:prettier --write .",
    "fmt:check": "deno run -A npm:prettier --check .",
    "compile": "deno compile --allow-read --allow-write --output build/api-lens src/main.ts",
    "compile-mac-intel": "deno compile --allow-read --allow-write --output build/api-lens-mac-intel --target x86_64-apple-darwin src/main.ts",
    "compile-mac-arm": "deno compile --allow-read --allow-write --output build/api-lens-mac-arm --target aarch64-apple-darwin src/main.ts",
    "init-db": "deno run --allow-read --allow-write --allow-env --allow-ffi script/init-db.ts && deno task prisma-generate",
    "clear-data": "deno run --allow-read --allow-write script/clear-data.ts",
    "prisma-generate": "deno run -A npm:prisma@latest generate",
    "precommit": "deno task fmt && deno task lint",
    "precommit:fix": "deno task fmt && deno task lint:fix",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@db/sqlite": "jsr:@db/sqlite",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@prisma/client": "npm:@prisma/client@^6.16.2",
    "cliffy": "npm:cliffy@^2.5.1",
    "@std/fs": "jsr:@std/fs",
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "prisma": "npm:prisma@^6.16.2"
  },
  "lint": {
    "files": {
      "include": ["."],
      "exclude": ["node_modules/", "dist/", "build/", ".git/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "ban-untagged-todo"]
    }
  }
}
