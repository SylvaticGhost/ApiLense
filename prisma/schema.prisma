generator client {
  provider = "prisma-client"
  output   = "./generated"
  runtime  = "deno"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String
  Schemas   Schema[]

  @@map("groups")
}

model Schema {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")
  url       String
  filePath  String          @map("file_path")
  groupId   Int             @map("group_id")
  Group     Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  lastUsed  SchemaLastUsed?

  @@unique([id, groupId])
  @@map("api_schemas")
}

model EndpointMetaData {
  schemaId Int    @map("schema_id")
  name     String
  method   String
  path     String

  @@unique([schemaId, name, method, path])
  @@map("endpoints")
}

model SchemaLastUsed {
  schemaId Int      @id @map("schema_id")
  lastUsed DateTime @default(now()) @map("last_used_at")
  Schema   Schema   @relation(fields: [schemaId], references: [id])

  @@map("schema_last_using")
}
